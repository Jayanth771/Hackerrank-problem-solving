#include<stdio.h>
int main()
{
    int n,h = 1,i,j;
    scanf("%d",&n);
    int array[n];
    for(i = 0;i<n;i++)
    {
        scanf("%d",&array[i]);
    }
    for(i = 0;i<n;i++)
    {
        h = 1;
        for(j = 1;j<=array[i];j++)
        {
            if(j%2 != 0 )
            {
                h = 2*h;
            }
            else
            {
                h = h+1;
            }
        }
         printf("%d\n",h);
        
    }
   

}
